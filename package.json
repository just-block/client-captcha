{
  "name": "captcha-monorepo",
  "description": "Simple and lightweight client-side captcha generator",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "publish:client-captcha": "npm publish --workspace client-captcha",
    "clean": "npm run clean --workspaces && rm -rf node_modules"
  },
  "devDependencies": {
    "prettier": "^3.3.2",
    "typescript": "^4.3.0"
  }
}
